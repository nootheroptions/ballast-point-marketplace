# Basic Authentication
# Set to "true" to enable basic auth protection for the entire site
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USER=
BASIC_AUTH_PASSWORD=

# Route Restrictions
# Set to "true" to restrict access to only public pages before release, i.e. website pages and not marketplace related
ONLY_SHOW_PUBLIC_PAGES=false

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_STORAGE_BUCKET=public-marketplace-images

# Database (Prisma with Supabase)
# Connection pooler URL (for queries)
DATABASE_URL=
# Direct connection URL (for migrations)
DIRECT_URL=

# Site URL (for OAuth redirects and email links)
NEXT_PUBLIC_SITE_URL=http://localhost.com:3000

# Root app domain for subdomain routing and auth cookies
NEXT_PUBLIC_ROOT_APP_DOMAIN=localhost.com

# Provider Dashboard URL
NEXT_PUBLIC_PROVIDER_DASHBOARD_URL=http://providers.localhost.com:3000

# Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=

# Podcasts
PODCASTS_RSS_FEED_URL=
PODCASTS_SPOTIFY_SHOW_URL=
PODCASTS_APPLE_PODCASTS_SHOW_URL=

# Hyvor Blogs
HYVOR_BLOGS_SUBDOMAIN=
HYVOR_BLOGS_WEBHOOK_KEY=

# Hyvor Talk (Comments)
NEXT_PUBLIC_HYVOR_TALK_WEBSITE_ID=
